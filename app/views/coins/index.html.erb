<div class="component-wrapper">
  <%= react_component("App") %>
</div>
<div class="product-description">Find where to buy any cryptocurrency. We list all exchanges for 1500+ coins.</div>
<div class="row top-lists">
  <div class="col-md-6">
    <table class='top-list'>
      <thead>
        <tr>
          <th colSpan="999">Top Coins</th>
        </tr>
      </thead>
      <tbody>
        <% @coins.each do |coin| %>
          <tr data-link="<%= coin_path(coin) %>">
            <td><%= coin.name %></td>
            <td><%= coin.symbol %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <table class='top-list'>
      <thead>
        <tr>
          <th colSpan="999">Top Exchanges</th>
        </tr>
      </thead>
      <tbody>
        <% @exchanges.ordered.each do |exchange| %>
          <tr data-link="<%= exchange.url %>">
            <td><%= exchange.name %></td>
            <td><%= number_to_currency(exchange.volume_24h, precision: 0, unit: "$") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
